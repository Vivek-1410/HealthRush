<% layout("/layouts/boilerplate") -%>
<body>
    
    <div class="d-flex flex-column justify-content-center align-items-center mt-4" style="min-height: 80vh;">
        <div class="card p-4 shadow-lg rounded" style="width: 100%; max-width: 400px;">
            <h2 class="text-center text-success mb-4"> HealthRush Login</h2>

            <form class="needs-validation" novalidate method="POST" action="/Home/login">
                
                <div class="form-group mb-4">
                    <label for="username" class="fw-semibold">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                    <small class="form-text text-muted">Your username must be unique.</small>
                </div>

                <div class="form-group mb-4">
                    <label for="password" class="fw-semibold">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success w-100 fw-semibold mt-3">Login</button>
                </div>

                <div class="mt-4 text-center">
                    <a href="/forgot-password" class="text-decoration-none">Forgot Password?</a> |
                    <a href="/Home/signup" class="text-decoration-none text-success">Sign Up</a>
                </div>
            </form>
        </div>
    </div>
</body>
