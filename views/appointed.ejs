<% layout("/layouts/boilerplate") -%>
<body>
<div class="thanks">
    <h3>Thanks @<%= patientDetail.name %> for booking appointment with us.</h3>
    <p>
        Your appointment has been booked on <%= patientDetail.date %> at <%= patientDetail.time %> with <%= doctorChosen.name %>
    </p>
    <a href="/Home"><button>Go Back</button></a>
</div>
<style>
    .thanks {
        margin-top: 10rem;
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        padding: 30px;
        margin: 200px auto;
        max-width: 600px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .thanks h3 {
        color: #4CAF50;
        font-size: 24px;
        margin-bottom: 15px;
    }

    .thanks p {
        color: #555;
        font-size: 16px;
        margin-bottom: 20px;
    }

    .thanks button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .thanks button:hover {
        background-color: #45a049;
    }
</style>
</body>
