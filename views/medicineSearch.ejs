<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Search Medicine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4 w-100" style="max-width: 500px;">
            <h2 class="text-center mb-4 text-primary">üîç Medicine Search</h2>
            <form action="/Home/medicine" method="POST">
                
                <!-- Dropdown for selecting a Medicine -->
                <div class="mb-3">
                    <label for="drugName" class="form-label">Select a Medicine</label>
                    <select class="form-select" id="drugName" name="drugName" required>
                        <option value="NIACIN">NIACIN</option>
                        <option value="Tylenol">Tylenol (Acetaminophen)</option>
                        <option value="Advil">Advil (Ibuprofen)</option>
                        <option value="Lipitor">Lipitor (Atorvastatin)</option>
                        <option value="Metformin">Metformin</option>
                        <option value="Amoxil">Amoxil (Amoxicillin)</option>
                        <option value="Zoloft">Zoloft (Sertraline)</option>
                        <option value="Allegra">Allegra (Fexofenadine)</option>
                        <option value="Zyrtec">Zyrtec (Cetirizine)</option>
                        <option value="Claritin">Claritin (Loratadine)</option>
                        <option value="Prozac">Prozac (Fluoxetine)</option>
                    </select>
                </div>

                <!-- Dropdown for selecting Generic/Brand -->
                <div class="mb-3">
                    <label for="searchType" class="form-label">Search by</label>
                    <select class="form-select" id="searchType" name="searchType" required>
                        <option value="generic" selected>Generic Name</option>
                        <option value="brand">Brand Name</option>
                    </select>
                </div>

                <!-- Medicine Search Button -->
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </form>
        </div>
    </div>

</body>
</html>
